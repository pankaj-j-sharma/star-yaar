<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="4dp" />
            <gradient
                android:angle="360"
                android:endColor="@color/app_color_dark"
                android:startColor="@color/app_color_light"
                android:type="linear" />
            <size
                android:width="24dp"
                android:height="24dp" />
        </shape>
    </item>

    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="3dp" />
            <solid android:color="@color/app_color_lighter" />
        </shape>
    </item>

</layer-list>