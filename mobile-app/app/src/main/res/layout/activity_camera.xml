<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        tools:context="com.seerslab.argear.sample.ui.CameraActivity">

        <FrameLayout
            android:id="@+id/camera_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/app_color" />

        <View
            android:id="@+id/top_ratio_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentTop="true"
            android:background="@color/app_color"
            android:visibility="invisible" />

        <View
            android:id="@+id/bottom_ratio_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"

            android:background="@color/app_color"
            android:visibility="invisible" />

        <Button
            android:id="@+id/more_button"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_alignParentStart="true"
            android:background="@drawable/btn_more"
            android:onClick="onClickButtons"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/toplayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:gravity="right"
            android:orientation="vertical">

            <com.incampusit.staryaar.argear.SegmentedProgressBar
                android:id="@+id/video_progress"
                android:layout_width="wrap_content"
                android:layout_height="5dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:background="@color/fifty_transparent_black" />

            <Button
                android:id="@+id/camera_switch_button"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/ic_flip"
                android:onClick="onClickButtons" />

            <Button
                android:id="@+id/flash_camera"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/ic_flash_on"
                android:onClick="onClickButtons"
                android:scaleType="centerInside" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_music"
                android:tint="@color/white" />

            <TextView
                android:id="@+id/add_sound_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClickButtons"
                android:padding="5dp"
                android:text="Add Sound"
                android:textColor="@color/white"
                android:textSize="13dp"
                android:textStyle="bold" />
        </LinearLayout>
        <!--more layout-->
        <include
            android:id="@+id/more_layout"
            layout="@layout/layout_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone" />
        <!--functions layout-->
        <LinearLayout
            android:id="@+id/functions_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="29dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/filter_button"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:background="@drawable/upload"
                android:onClick="onClickButtons"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/upload_layout"
                android:layout_width="52dp"
                android:layout_height="55dp"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:elevation="10dp"
                android:gravity="center"
                android:onClick="onClickButtons"
                android:orientation="vertical"
                android:visibility="visible">

                <ImageView
                    android:layout_width="47dp"
                    android:layout_height="47dp"
                    android:src="@drawable/upload_gallery" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="4dp"
                    android:text="Upload"
                    android:textColor="@color/white"
                    android:textSize="10dp"
                    android:textStyle="bold"
                    android:visibility="gone" />

            </LinearLayout>

            <Button
                android:id="@+id/sticker_button"
                android:layout_width="52dp"
                android:layout_height="55dp"
                android:layout_marginStart="23.5dp"
                android:background="@drawable/ic_effects"
                android:elevation="10dp"
                android:onClick="onClickButtons" />

            <ToggleButton
                android:id="@+id/shutter_button"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_marginStart="23.5dp"
                android:background="@drawable/ic_recoding_no"
                android:checked="false"
                android:elevation="10dp"
                android:onClick="onClickButtons"
                android:text=""
                android:textOff=""
                android:textOn="" />

            <Button
                android:id="@+id/beauty_button"
                android:layout_width="52dp"
                android:layout_height="55dp"
                android:layout_marginStart="23.5dp"
                android:background="@drawable/beauty_btn_default"
                android:elevation="10dp"
                android:onClick="onClickButtons" />

            <Button
                android:id="@+id/bulge_button"
                android:layout_width="52dp"
                android:layout_height="55dp"
                android:layout_marginStart="23.5dp"
                android:background="@drawable/bulge_btn_default"
                android:elevation="10dp"
                android:onClick="onClickButtons" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="invisible" />

        <FrameLayout
            android:id="@+id/slot_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"></FrameLayout>

    </RelativeLayout>
</layout>