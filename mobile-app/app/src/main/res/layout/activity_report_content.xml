<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_color">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/transparent"
        android:elevation="20dp"
        android:gravity="center"
        android:shadowColor="@color/app_color_dark"
        android:text="Report content"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider2"
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <RadioGroup
        android:id="@+id/report_options"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:paddingTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider2">

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:buttonTint="@color/white"
            android:padding="10dp"
            android:paddingLeft="5dp"
            android:text="Copyright Infringment"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:buttonTint="@color/white"
            android:padding="10dp"
            android:paddingLeft="5dp"
            android:text="Harmful dangerous acts"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:buttonTint="@color/white"
            android:padding="10dp"
            android:paddingLeft="5dp"
            android:text="Erotic or vulgar content"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:buttonTint="@color/white"
            android:padding="10dp"
            android:paddingLeft="5dp"
            android:text="Infringes my rights"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:buttonTint="@color/white"
            android:padding="10dp"
            android:paddingLeft="5dp"
            android:text="Fraud or Spam"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:buttonTint="@color/white"
            android:padding="10dp"
            android:paddingLeft="5dp"
            android:text="Violent or repulsive content"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:buttonTint="@color/white"
            android:padding="10dp"
            android:paddingLeft="5dp"
            android:text="Unauthorized use of the post"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:buttonTint="@color/white"
            android:padding="10dp"
            android:paddingLeft="5dp"
            android:text="Improper behaviour for juveniles"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:buttonTint="@color/white"
            android:padding="10dp"
            android:paddingLeft="5dp"
            android:text="Others, please specify below"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </RadioGroup>

    <EditText
        android:id="@+id/editTextCommentReport"
        android:layout_width="0dp"
        android:layout_height="110dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="9dp"
        android:background="@drawable/feedback_multiline_background"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Please enter your comments"
        android:inputType="textMultiLine"
        android:maxLines="8"
        android:padding="10dp"
        android:textColor="@color/app_color_dark"
        android:textColorHint="@color/gray"
        android:textSize="18sp"
        android:tooltipText="Enter atleast 30 characters"
        app:layout_constraintEnd_toEndOf="@+id/report_options"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/report_options"
        app:layout_constraintTop_toBottomOf="@+id/report_options" />

    <Button
        android:id="@+id/btnsubmitreport"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/button_background_light"
        android:elevation="10dp"
        android:text="Submit"
        android:textAllCaps="false"
        android:textColor="@color/app_color"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/editTextCommentReport"
        app:layout_constraintStart_toStartOf="@+id/editTextCommentReport" />


</androidx.constraintlayout.widget.ConstraintLayout>